{
  "_comment": "This file contains configuration examples for feature flags. Do not use in production.",
  
  "AppConfiguration": {
    "_examples": {
      "ConnectionString_Development": "Endpoint=https://your-appconfig.azconfig.io;Id=xxx;Secret=xxx",
      "Endpoint_Production_With_ManagedIdentity": "https://your-appconfig.azconfig.io"
    },
    "_note": "For production, use Managed Identity approach with only Endpoint configured. Ensure the service has 'App Configuration Data Reader' role assigned."
  },
  
  "FeatureManagement": {
    "_available_flags": {
      "LoyaltyProgram": "Applies 10% discount for customers with loyalty numbers",
      "UseWorkflowImplementation": "Routes orders to Dapr Workflow instead of Actor/State implementations",
      "DynamicPricing": "Applies 1.2x surge pricing multiplier (can be time-based)"
    },
    
    "_examples": {
      "simple_boolean": {
        "LoyaltyProgram": true
      },
      
      "time_window_filter": {
        "DynamicPricing": {
          "EnabledFor": [
            {
              "Name": "Microsoft.TimeWindow",
              "Parameters": {
                "Start": "11:00:00",
                "End": "14:00:00"
              }
            }
          ]
        }
      },
      
      "percentage_rollout": {
        "NewCheckoutExperience": {
          "EnabledFor": [
            {
              "Name": "Microsoft.Percentage",
              "Parameters": {
                "Value": 25
              }
            }
          ]
        }
      },
      
      "combined_filters": {
        "DynamicPricing": {
          "EnabledFor": [
            {
              "Name": "Microsoft.TimeWindow",
              "Parameters": {
                "Start": "11:00:00",
                "End": "14:00:00"
              }
            },
            {
              "Name": "Microsoft.Percentage",
              "Parameters": {
                "Value": 50
              }
            }
          ]
        }
      }
    }
  }
}
